<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="0px"
        android:layout_marginLeft="0px"
        android:layout_marginTop="0px"
        android:layout_marginEnd="0px"
        android:layout_marginRight="0px"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtCalculation"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="100dp"
            android:text="0"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtResults"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_marginStart="300dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="25dp"
            android:foregroundGravity="right"
            android:gravity="right"
            android:text="0"
            android:textColor="#0B0000"
            android:textSize="36sp" />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="416dp"
        android:layout_height="504dp"
        android:layout_below="@id/l1"
        android:layout_marginTop="20px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l1">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="395dp"
            android:layout_height="450dp"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">


            <LinearLayout
                android:id="@+id/innerl1"
                android:layout_width="wrap_content"
                android:layout_height="70dp">

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:text="C"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnZero"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:text="0"
                    android:textSize="24sp"
                    app:cornerRadius="40px" />

                <Button
                    android:id="@+id/btnDot"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:foregroundGravity="center_horizontal"
                    android:paddingTop="0dp"
                    android:paddingBottom="3dp"
                    android:text="."
                    android:textSize="36sp"
                    app:cornerRadius="150px" />

                <Button
                    android:id="@+id/btnDivide"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:foregroundGravity="center_horizontal"
                    android:text="/"
                    android:textSize="36sp"
                    app:cornerRadius="150px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_below="@id/innerl1">

                <Button
                    android:id="@+id/btnSeven"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:text="7"
                    android:textSize="24sp"
                    app:cornerRadius="40px" />

                <Button
                    android:id="@+id/btnEight"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:text="8"
                    android:textSize="24sp"
                    app:cornerRadius="40px" />

                <Button
                    android:id="@+id/btnNine"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:text="9"
                    android:textSize="24sp"
                    app:cornerRadius="40px" />

                <Button
                    android:id="@+id/btnMultiply"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:text="*"
                    android:textSize="36sp"
                    app:cornerRadius="150px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnFour"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:text="4"
                    android:textSize="24sp"
                    app:cornerRadius="40px" />

                <Button
                    android:id="@+id/btnFive"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:text="5"
                    android:textSize="24sp"
                    app:cornerRadius="40px" />

                <Button
                    android:id="@+id/btnSix"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:text="6"
                    android:textSize="24sp"
                    app:cornerRadius="40px" />

                <Button
                    android:id="@+id/btnSubstract"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:text="-"
                    android:textSize="36sp"
                    app:cornerRadius="150px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnOne"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:text="1"
                    android:textSize="24sp"
                    app:cornerRadius="40px" />

                <Button
                    android:id="@+id/btnTwo"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:text="2"
                    android:textSize="24sp"
                    app:cornerRadius="40px" />

                <Button
                    android:id="@+id/btnThree"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:text="3"
                    android:textSize="24sp"
                    app:cornerRadius="40px" />

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="0px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:text="+"
                    android:textSize="36sp"
                    app:cornerRadius="150px" />
            </LinearLayout>

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:layout_marginStart="5px"
                android:layout_marginLeft="5px"
                android:layout_marginTop="10px"
                android:layout_marginEnd="5px"
                android:layout_marginRight="5px"
                android:text="="
                android:textSize="36sp"
                app:cornerRadius="150px" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>